@model KidsBirthdayPlanner.ViewModels.BirthdayPartyViewModel

<h2>Edit Birthday Party</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Theme</label>
        <select asp-for="ThemeId" asp-items="Model.Themes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Location</label>
        <select asp-for="LocationName" asp-items="Model.Locations" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Cake</label>
        <select asp-for="CakeId" asp-items="Model.Cakes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Portions</label>
        <input asp-for="Portions" class="form-control" />
    </div>

    <div class="form-group">
        <label>Balloons</label>
        <select asp-for="BalloonId" asp-items="Model.Balloons" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Balloon Quantity</label>
        <input asp-for="BalloonQuantity" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label>Guests Count</label>
        <input asp-for="GuestsCount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        Save
    </button>

</form>

<a asp-action="Index" class="btn btn-secondary mt-3">
    ← Back
</a>
