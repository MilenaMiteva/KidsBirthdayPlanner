@model KidsBirthdayPlanner.ViewModels.BirthdayPartyViewModel

<h2>Create Birthday Party</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label>Theme</label>

        <select asp-for="ThemeId"
                asp-items="Model.Themes"
                class="form-control neon-select">
            <option value="" selected="true">-- Select Theme --</option>
        </select>

        <span asp-validation-for="ThemeId"></span>
    </div>


    <div class="form-group">

        <label>Cake</label>

        <select asp-for="CakeId"
                asp-items="Model.Cakes"
                class="form-control neon-select">
        </select>


    </div>


    <div class="form-group mt-3">

        <label>Count Portions</label>

        <input asp-for="Portions"
               type="number"
               class="form-control neon-input"
               min="8"
               max="30" />

        <span asp-validation-for="Portions" class="text-danger"></span>

    </div>


    <div class="form-group">
        <label>Balloons</label>
        <select asp-for="BalloonId"
                asp-items="Model.Balloons"
                class="form-control neon-select">
        </select>

    </div>
    <div class="form-group">

        <label>Balloon Count</label>

        <input asp-for="BalloonQuantity"
               type="number"
               class="form-control neon-input"
               min="1"
               max="200" />

        <span asp-validation-for="BalloonQuantity" class="text-danger"></span>

    </div>


   
       
    <div class="form-group">

        <label>Date & Time</label>

          <input asp-for="Date"
              type="datetime-local"
              class="form-control"
              min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
              value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

    </div>


   

    <div class="form-group">
        <label>Guests Count</label>
        <input asp-for="GuestsCount" class="form-control" min="1" max="500"/>
        <span asp-validation-for="GuestsCount"
              class="text-danger"></span>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </div>

    <button type="submit" class="btn btn-primary mt-3">
        Save
    </button>

</form>

<a asp-action="Index" class="btn btn-secondary mt-3">
    ← Back
</a>


